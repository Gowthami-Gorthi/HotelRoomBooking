<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/content/css/bootstrap.css" rel="stylesheet" />
    <script src="~/content/js/MyJs.js"></script>
    <script src="~/content/js/bootstrap.js"></script>
    <script src="~/content/js/jquery.js"></script>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<style>
    .nopadding {
        margin: 0;
        padding: 0;
        border: 0;
    }

    .sidebar {
        height: 650px;
        border: 0;
    }

    .affix {
        width: 23%
    }
</style>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-inverse nopadding">

            <span>  <a href="#" class="navbar-brand">Hotel Booking</a></span>

            <input type="text" class="form-control" style="width:700px" /> <input type="button" value="Search" class="btn btn-primary" />


            <ul class="nav navbar-right navbar-nav">

                <li>
                    <a href="#" data-toggle="dropdown">
                        <button class="btn btn-default">
                            @if (Session["uname"] == null)
                            {
                                @Html.Label(" Guest")
                            }
                            else
                            {
                                @Session["uname"]
                                <ul@* class="dropdown-menu"*@>
                                    @* <li>@Html.ActionLink("Profile", "profile")</li>*@

                                    <li>@Html.ActionLink("Report", "BookingDetails")</li>                                  
                </ul>
            }
                            </button>
                            </a>

                            </li>
                            </ul>
                        </nav>
        <div class="row">
            <div class="col-md-3">
                <div class="nopadding" data-spy="affix" data-offset-top="20">
                    <ul class="nav navbar navbar-inverse  sidebar">

                        @if (Session["uname"] == null)
                        {
                            <li>   @Html.ActionLink("AdminLogin", "AdminLogin")</li>
                            <li>   @Html.ActionLink("User Login", "Login")</li>

                        }
                        else
                        {
                            <li>   @Html.ActionLink("User Login", "Login")</li>
                            <li>  @Html.ActionLink("Home", "Home") </li>
                            <li>  @Html.ActionLink("User Queries", "UserQuery")</li>
                            <li>   @Html.ActionLink("Logout", "Logout")</li>
                            <li>   @Html.ActionLink("User Details", "UserDetails")</li>
                        }

                    </ul>
                </div>
            </div>
            <div class="col-md-9">
                <div class="jumbotron">
                    @RenderBody()
                </div>
            </div>
</body>
</html>
