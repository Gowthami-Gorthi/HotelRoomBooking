@model HotelRoomBooking.UPI
@{
    ViewBag.Title = "Upi";
    Layout = "~/Views/shared/UserMaster.cshtml";
}

<h2><b>Upi</b></h2>
<head>
    <style>
        .login {
            width: 382px;
            overflow: hidden;
            margin: auto;
            margin: 20 0 0 450px;
            padding: 80px;
            background: gray;
            border-radius: 15px;
        }

        h2, h3 {
            text-align: center;
            color: red;
            padding: 20px;
            font-size: 20px;
        }

        label {
            color: #08ffd1;
            font-size: 17px;
        }
    </style>

</head>
<div class="login">
    <div>@Html.ActionLink("Back","Index")</div>
    <form method="post">
        @Html.Label("Enter UPi Id:")@Html.TextBoxFor(r => r.UPI_ID)<br />
        @Html.ValidationMessageFor(r=>r.UPI_ID)
        <br />
        <input type="submit" value="submit" class="btn btn-primary" />
    </form>
    <div>
        @if(ViewData["Upi"]!=null)
            {
                <div><i>@ViewData["Upi"]</i></div>
            }        
    </div>    
</div>